{
  "root": true,
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "plugin:vue/vue3-recommended"
  ],
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "plugins": [
    "@typescript-eslint/eslint-plugin"
  ],
  "rules": {
    "no-multiple-empty-lines": "error",
    "no-console": "error",
    "no-debugger": "error",
    "no-unused-vars": "off",
    "max-len": [1, { "code": 100 }],
    "@typescript-eslint/no-unused-vars": [
      "error"
    ]
  }
}
